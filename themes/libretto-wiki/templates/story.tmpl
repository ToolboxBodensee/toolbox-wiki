{% extends 'base.tmpl' %}

{% block content_header %}
    <div class="title-block post-format-icon-star">
        <div class="entry-meta">
            <span class="edit-on">
                <a href="{{ post.source_link() }}">Quelltext</a>
                <a href="https://github.com/ToolboxBodensee/toolbox-wiki/tree/master{{ post.source_link() }}?edit">Bearbeiten</a>
            </span>
        </div>
        <h1>{{ post.title()|e }}</h1>
    </div>
{% endblock %}

{% block content_post %}
    <div class="site-content" role="main">
        <article class="format-standard libretto-long-form">
            <div class="entry-content">
                {{ post.text() }}
            </div>
        </article>
    </div>
{% endblock %}


